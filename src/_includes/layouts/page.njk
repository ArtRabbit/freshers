---
layout: layouts/base.njk
section: page
---
<article>
<h1>{{ title }}</h1>
{% if dl.download %}<a href="{{ dl.download }}" class="btn arrow">{{ dl.downloadLabel }}</a>{% endif %}
{{ layoutContent | safe }}
</article>
<div class="navigation">
{% if pageNavigation.back %}<a href="{{ pageNavigation.back }}" class="back" tabindex="0" role="button" aria-label="Back a page"></a>{% endif %}
{% if pageNavigation.nexta %}
<a href="{{ pageNavigation.nexta }}" class="next" tabindex="0" role="button" aria-label="Next page">{{ pageNavigation.nextLabel }}</a>
{% elif pageNavigation.next %}
<a href="{{ pageNavigation.next }}" class="next" tabindex="0" role="button" aria-label="Next page">{{ pageNavigation.nextLabel }}</a>
{% endif %}
</div>